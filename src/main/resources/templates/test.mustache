<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>간단한 STOMP 채팅방</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sockjs-client/1.6.1/sockjs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/stomp.js/2.3.3/stomp.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .chat-container {
            border: 1px solid #ccc;
            border-radius: 5px;
            height: 400px;
            display: flex;
            flex-direction: column;
        }
        .chat-header {
            background-color: #f1f1f1;
            padding: 10px;
            font-weight: bold;
            border-bottom: 1px solid #ccc;
        }
        .chat-messages {
            flex-grow: 1;
            overflow-y: auto;
            padding: 10px;
        }
        .message {
            margin-bottom: 10px;
            padding: 8px;
            border-radius: 5px;
        }
        .received {
            background-color: #e9e9e9;
            align-self: flex-start;
        }
        .message-form {
            display: flex;
            padding: 10px;
            border-top: 1px solid #ccc;
        }
        #message-input {
            flex-grow: 1;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }
        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 8px 15px;
            margin-left: 10px;
            border-radius: 3px;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
        .connection-form {
            margin-bottom: 20px;
        }
        .connection-form input {
            padding: 8px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }
        .status {
            color: #666;
            margin: 10px 0;
        }
    </style>
</head>
<body>
<h1>간단한 STOMP 채팅방</h1>

<div class="connection-form">
    <input type="text" id="username" placeholder="사용자 이름">
    <input type="text" id="server-url" placeholder="서버 URL" value="http://localhost:8080/chat/ws">
    <button id="connect-btn">연결</button>
    <button id="disconnect-btn" disabled>연결 끊기</button>
</div>

<div class="status" id="status">연결 상태: 연결되지 않음</div>

<div class="chat-container">
    <div class="chat-header">채팅방</div>
    <div class="chat-messages" id="chat-messages"></div>
    <div class="message-form">
        <input type="text" id="message-input" placeholder="메시지를 입력하세요..." disabled>
        <button id="send-btn" disabled>전송</button>
    </div>
</div>

<script>
    // 요소 선택
    const connectBtn = document.getElementById('connect-btn');
    const disconnectBtn = document.getElementById('disconnect-btn');
    const usernameInput = document.getElementById('username');
    const serverUrlInput = document.getElementById('server-url');
    const statusElement = document.getElementById('status');
    const messageInput = document.getElementById('message-input');
    const sendBtn = document.getElementById('send-btn');
    const chatMessages = document.getElementById('chat-messages');

    // 변수 선언
    let stompClient = null;
    let username = '';

    // 이벤트 리스너
    connectBtn.addEventListener('click', connect);
    disconnectBtn.addEventListener('click', disconnect);
    sendBtn.addEventListener('click', sendMessage);
    messageInput.addEventListener('keypress', e => { if (e.key === 'Enter') sendMessage(); });

    // 연결 함수
    function connect() {
        username = usernameInput.value.trim();
        const serverUrl = serverUrlInput.value.trim();

        if (!username) {
            alert('사용자 이름을 입력하세요.');
            return;
        }

        if (!serverUrl) {
            alert('서버 URL을 입력하세요.');
            return;
        }

        statusElement.textContent = '연결 상태: 연결 중...';

        // SockJS와 STOMP 클라이언트 생성
        const socket = new SockJS(serverUrl);
        stompClient = Stomp.over(socket);

        // 디버그 로그 비활성화
        stompClient.debug = null;

        // 연결
        stompClient.connect({}, function(frame) {
            statusElement.textContent = '연결 상태: 연결됨';

            // 채팅방 구독
            stompClient.subscribe('/topic/chat', function(message) {
                try {
                    const parsedMessage = JSON.parse(message.body);
                    displayMessage(parsedMessage);
                } catch (error) {
                    console.error("메시지 파싱 오류:", error);
                }
            });

            // UI 업데이트
            connectBtn.disabled = true;
            disconnectBtn.disabled = false;
            messageInput.disabled = false;
            sendBtn.disabled = false;
            usernameInput.disabled = true;
            serverUrlInput.disabled = true;
            messageInput.focus();
        }, function(error) {
            statusElement.textContent = '연결 상태: 연결 실패';
            console.error('연결 오류:', error);
            alert('연결 실패: ' + error);
        });
    }

    // 연결 해제 함수
    function disconnect() {
        if (stompClient !== null) {
            stompClient.disconnect();
            stompClient = null;

            statusElement.textContent = '연결 상태: 연결되지 않음';
            connectBtn.disabled = false;
            disconnectBtn.disabled = true;
            messageInput.disabled = true;
            sendBtn.disabled = true;
            usernameInput.disabled = false;
            serverUrlInput.disabled = false;
        }
    }

    // 메시지 전송 함수
    function sendMessage() {
        const message = messageInput.value.trim();
        if (message && stompClient) {
            // MessageRequestDto 형식에 맞게 JSON 객체 구성
            const messageObj = {
                message: message
            };

            stompClient.send("/app/chat", {}, JSON.stringify(messageObj));
            messageInput.value = '';
            messageInput.focus();
        }
    }

    // 메시지 표시 함수
    function displayMessage(messageData) {
        const messageElement = document.createElement('div');

        // 메시지 구조는 { message: "내용" }
        const messageText = messageData.message || "빈 메시지";

        messageElement.classList.add('message', 'received');
        messageElement.innerHTML = `<strong>${username}:</strong> ${messageText}`;

        chatMessages.appendChild(messageElement);
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }
</script>
</body>
</html>